# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

# Home page
GET     /tubelytics                 controllers.HomeController.index()

# Search endpoint for fetching videos with request and query parameter
GET     /tubelytics/search           controllers.HomeController.search(request: play.mvc.Http.Request, query: String)

# Retrieve session-specific search history with request parameter
GET     /tubelytics/searchHistory    controllers.HomeController.getSearchHistory(request: play.mvc.Http.Request)

# Fetch channel profile using channelId as a parameter
GET   /channel/:channelId   controllers.HomeController.channelProfile(channelId: String)


